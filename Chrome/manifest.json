{
  "name": "Feature Bee",
  "version": "0.1",
  "description": "A browser action to toggle feature bee features",
  "permissions": [
	"tabs",
    "activeTab", 
	"tabs", 	 
	"http://*/*", 
	"https://*/*", 
	"storage",
	"webRequest"
  ],
  "browser_action": {
      "default_title": "My Bookmarks",
      "default_icon": "bee.png",
      "default_popup": "popup.html"
  },
  "icons": { "16": "bee.png",
             "48": "bee.png",
             "128": "bee.png" 
  },
   "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["FeatureBeeTogglesExtensionStorage.js", "Environments.js", "FeatureBeeToggleRepository.js", "FeatureBeeToggleBar.js", "content_scripts.js"],
	  "css" : ["toggle_bar.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com 'unsafe-eval'; object-src 'self'",
  "options_page" : "options.html"
}
