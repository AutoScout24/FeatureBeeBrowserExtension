{
  "name": "Feature Bee Plus",
  "version": "0.6",
  "description": "A chrome extension to support the using of FeatureBee",
  "permissions": [
	"tabs",
    "activeTab", 
	"tabs", 	 
	"http://*/*", 
	"https://*/*", 
	"storage",
	"webRequest"
  ],
  "background": {
    "scripts": ["Scripts/Chrome/injector.js"]
  },
  "browser_action": {
      "default_title": "FeatureBee Chrome Extension",
      "default_icon": "Images/bee.png"
  },
  "icons": { "16": "Images/bee_16.png",
             "48": "Images/bee_48.png",
             "128": "Images/bee_128.png" 
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [    
    "Styles/styles.css",
    "Scripts/Presenter.js",
	"Scripts/Repository.js",
	"Images/logo.png",
	"Images/help.png"
  ]
}
